<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pic_ready">

    <TextView
        android:id="@+id/ready_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="카메라가 준비됐나요?"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_face"
        app:layout_constraintEnd_toEndOf="@+id/tv_face"
        app:layout_constraintStart_toStartOf="@+id/tv_face" />

    <TextView
        android:id="@+id/tv_face"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/button_box_long"
        android:gravity="center"
        android:text="얼굴로 따라하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />



    <TextView
        android:id="@+id/ready_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="카메라가 없어도 OK~"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_quiz"
        app:layout_constraintEnd_toEndOf="@+id/tv_quiz"
        app:layout_constraintStart_toStartOf="@+id/tv_quiz" />

    <TextView
        android:id="@+id/tv_quiz"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_box_long"
        android:gravity="center"
        android:text="퀴즈로 풀기"
        app:layout_constraintEnd_toEndOf="@+id/tv_face"
        app:layout_constraintStart_toStartOf="@+id/tv_face"
        app:layout_constraintTop_toBottomOf="@+id/tv_face"
        app:layout_constraintWidth_percent="0.7" />



</androidx.constraintlayout.widget.ConstraintLayout>